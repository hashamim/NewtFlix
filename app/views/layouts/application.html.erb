<!DOCTYPE html>
<html>
  <head>
    <title>NewtFlix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <%= javascript_include_tag 'application' %>
    <% if logged_in? %>
      <script>
        window.currentUser = {
          id: <%= current_user.id %>,
          profile: "<%= current_user.profile %>",
          email: "<%= current_user.email %>",
        };
      </script>
    <% end %>
    <script>
      window.netflixLogo = "<%= image_url 'Netflix_2015_logo.svg' %>";
      window.formBackground = "<%= image_url 'formbackground.jpg' %>";
      window.profiles = {
        red: "<%= image_url 'red_profile.png' %>",
        green: "<%= image_url 'green_profile.png' %>",
        blue: "<%= image_url 'blue_profile.png' %>",
      };
      window.play_image = "<%= image_url 'play_button.svg' %>"
      window.add_image = "<%= image_url 'add.png' %>"
      window.mute_image = "<%= image_url 'mute.svg' %>"
      window.volume_image = "<%= image_url 'volume.svg' %>"
      window.tv_genre = "<%=  Genre.find_by(name: "TV Shows")[:id]%>"
    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
